        "redux-saga-test-plan": "^4.0.0-rc.3",
        "stylelint": "^12.0.0",
        "stylelint-config-recess-order": "^2.0.3",
        "stylelint-config-standard": "^19.0.0",
        "typescript": "3.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn tests"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write",
            "git add"
        ],
        "*.scss": [
            "prettier --write",
            "yarn stylelint:fix",
            "git add"
        ]
    }
}
